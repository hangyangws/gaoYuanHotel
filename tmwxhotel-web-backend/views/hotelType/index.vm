<!DOCTYPE html>
<html lang="zh-cmn-Hans">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="renderer" content="webkit" />
    <title>品牌列表</title>
    <!-- icon -->
    <link rel="icon" sizes="any" href="/img/favicon.png" />
    <!-- basic -->
    <link rel="stylesheet" href="/css/base.css" />
    <!-- this -->
    <link rel="stylesheet" href="/css/all.css" />
    <!--[if lt IE 9]>
        <script src="/js/html5shiv.min.js"></script>
    <![endif]-->
</head>

<body id="body">
    <!-- 头部 -->
    #parse("./common/header.vm")
    <main class="main bb pr page_brand">
        #parse("./common/aside.vm")
        <section id="allWrap" class="all-wrap">
            <!-- 导航栏 -->
            <div class="con-nav i-lh30 i-bcm h30 p10 mb20 c">
                <nav class="fl">
                    <a>品牌管理</a>
                    <a href="/hotelType">品牌列表</a>
                </nav>
                <div class="fr c">
                    <!-- 第一个不需要 class ml20 -->
                    <label class="nav-search fl">
                        <input class="search-list i-input i-b1m fl" type="text" value="$!{search}" placeholder="品牌名称" />
                        <button class="brand-search-btn i-button fl" type="botton">搜索</button>
                    </label>
                    <a href="/hotelType/add" class="i-button i-b-mw fl ml20">新增酒店品牌</a>
                </div>
            </div>
            <!-- 结果展示区域 table -->
            <table class="i-table mb20 w1">
                <thead>
                    <tr>
                        <th>品牌名称</th>
                        <th>品牌图片</th>
                        <th>排序号</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    #if ($msg == '获取数据正常')
                        #foreach ($item in $data.data.list)
                        <tr data-id="${item.id}" data-name="$!{item.name}">
                            <td>${item.name}</td>
                            <td><img src="${item.imagepath}" alt="品牌图片" /></td>
                            <td>${item.orderlist}</td>
                            <td>
                                <span class="brand-del i-button-m dlb mr20 cp">删除</span>
                                <a class="dlb i-button-m" href="/hotelType/getBrand/${item.id}">编辑</a>
                            </td>
                        </tr>
                        #end
                    #else
                    <tr>
                        <td colspan="4">${msg}</td>
                    </tr>
                    #end
                </tbody>
            </table>
            <!-- 分页 paging -->
            <section class="paging"></section>
        </section>
    </main>
    <!-- script -->
    <script>
        var RenderData = {
            search: '$!{search}',
            pageNum: '$!{data.data.pageNum}',
            total: '$!{data.data.total}'
        };
    </script>
    <script src="/js/jq.js"></script>
    <script src="/js/public.js"></script>
    <script src="/js/layer.min.js"></script>
    <!-- this -->
    <script src="/js/all.js"></script>
    <script src="/js/hotelType.js"></script>
</body>

</html>
